# 智能监控预警系统 - 环境配置示例
# 复制此文件为 .env 并修改相应配置

# ===== 基础应用配置 =====
APP_NAME=智能监控预警系统
APP_VERSION=2.0.0
APP_DESCRIPTION=基于AI的自动化巡检与智能预警系统
DEBUG=false
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# ===== 服务器配置 =====
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# ===== 安全配置 =====
# 生产环境中必须设置安全的SECRET_KEY
SECRET_KEY=your-super-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===== 跨域配置 =====
# 生产环境中应设置具体的域名
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ===== 数据库配置 =====
# 生产环境中必须设置正确的数据库连接信息
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/smart_monitoring

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===== Prometheus配置 =====
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_TIMEOUT=30
PROMETHEUS_MAX_RETRIES=3

# ===== AI/ML配置 =====
AI_MODEL_PATH=./models
AI_BATCH_SIZE=1000
AI_CACHE_TTL=300
AI_MAX_WORKERS=2

# ===== 通知服务配置 =====
# Slack配置
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#monitoring

# 邮件配置
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ===== 规则引擎配置 =====
RULES_CHECK_INTERVAL=60
MAX_ALERT_FREQUENCY=300
RULE_EXECUTION_TIMEOUT=30

# ===== 性能配置 =====
ENABLE_METRICS=true
CACHE_TTL=300
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# ===== 错误监控配置 =====
SENTRY_DSN=

# ===== 测试配置 =====
TESTING=false
TEST_DATABASE_URL=
