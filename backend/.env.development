# ===== 智能监控预警系统开发环境配置 =====
# 使用SQLite作为开发数据库

# ===== 应用基础配置 =====
APP_NAME="智能监控预警系统"
APP_VERSION="2.0.0"
APP_DESCRIPTION="基于AI的自动化巡检与智能预警系统"
DEBUG=true
ENVIRONMENT=development
API_V1_PREFIX="/api/v1"

# ===== 服务器配置 =====
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ===== 安全配置 =====
SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long-please-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===== 跨域配置 =====
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# ===== 数据库配置 (SQLite) =====
DATABASE_URL=sqlite+aiosqlite:///./smart_monitoring.db

# ===== Redis配置 (可选，用于开发) =====
# REDIS_URL=redis://localhost:6379/0

# ===== Prometheus配置 =====
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_TIMEOUT=30
PROMETHEUS_MAX_RETRIES=3

# ===== AI/ML配置 =====
AI_MODEL_PATH=./models
AI_BATCH_SIZE=1000
AI_CACHE_TTL=300
AI_MAX_WORKERS=2

# ===== 通知服务配置 - Slack =====
# SLACK_WEBHOOK_URL=
# SLACK_BOT_TOKEN=
SLACK_CHANNEL=#monitoring-alerts

# ===== 通知服务配置 - 邮件 =====
# SMTP_HOST=
SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
SMTP_USE_TLS=true

# ===== 规则引擎配置 =====
RULES_CHECK_INTERVAL=60
MAX_ALERT_FREQUENCY=300
RULE_EXECUTION_TIMEOUT=30

# ===== 性能配置 =====
ENABLE_METRICS=true
CACHE_TTL=300
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# ===== 日志配置 =====
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# ===== 错误追踪 (可选) =====
# SENTRY_DSN=

# ===== 测试配置 =====
TESTING=false