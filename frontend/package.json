{
  "name": "smart-monitoring-frontend",
  "version": "2.0.0",
  "description": "智能监控预警系统前端 - 基于Vue 3的现代化监控仪表盘",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "build:prod": "vite build --mode production",
    "build:staging": "vite build --mode staging", 
    "type-check": "vue-tsc --noEmit --skipLibCheck",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:strict": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --config .eslintrc.strict.json",
    "lint:style": "stylelint src/**/*.{css,scss,vue} --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "quality:check": "node code-quality-check.js",
    "quality:fix": "node code-quality-check.js --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "install:smart": "install-deps.bat",
    "install:taobao": "npm install --registry https://registry.npmmirror.com",
    "install:huawei": "npm install --registry https://repo.huaweicloud.com/repository/npm",
    "postinstall": "echo \"✅ 依赖安装完成，运行 npm run dev 启动开发服务器\""
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    
    "axios": "^1.6.2",
    "@vueuse/core": "^10.6.1",
    "@vueuse/integrations": "^10.6.1",
    
    "echarts": "^5.4.3",
    "vue-echarts": "^6.6.1",
    
    "element-plus": "^2.4.4",
    "@element-plus/icons-vue": "^2.3.1",
    
    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.4",
    "nprogress": "^0.2.0",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/lodash-es": "^4.17.12",
    "@types/nprogress": "^0.2.3",
    
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    
    "typescript": "^5.3.3",
    "vue-tsc": "^1.8.25",
    
    "vite": "^5.0.10",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-windicss": "^1.9.3",
    "windicss": "^3.5.6",
    
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-icons": "^0.18.1",
    "@iconify/json": "^2.2.150",
    
    "sass": "^1.69.5",
    
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint-plugin-vue": "^9.19.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    
    "vitest": "^1.0.4",
    "@vue/test-utils": "^2.4.2",
    "jsdom": "^23.0.1"
  },
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}